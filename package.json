{
  "name": "firebase-amp-pwa",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf ./public/* && rm -rf ./generated/*",
    "build:scss": "node-sass ./scss/ -o ./generated/css/",
    "build:scss:watch": "node-sass -w ./scss/ -o ./generated/css/",
    "build:postcss": "postcss ./generated/css/*.css --dir ./generated/optimized_css",
    "build:postcss:watch": "postcss -w ./generated/css/*.css --dir ./generated/optimized_css",
    "build:static": "mkdir -p public && cp -R ./static/* ./public",
    "build:images": "imagemin ./images --out-dir=./public/img",
    "build:createPages": "node createPages.js",
    "build": "npm run clean && npm run build:static && npm run build:images && npm run build:scss && npm run build:postcss && npm run build:createPages",
    "serve": "firebase serve --host 0.0.0.0 --only hosting",
    "serve:watch": "npm run build && concurrently --kill-others 'npm run build:scss:watch' 'npm run build:postcss:watch' 'npm run serve' 'sleep 15 && browser-sync start --proxy \"0.0.0.0:5000\" --files \"public/*\"'"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "amphtml-validator": "^1.0.23",
    "autoprefixer": "^9.6.0",
    "clean-css-cli": "^4.3.0",
    "browser-sync": "^2.26.5",
    "concurrently": "^4.0.1",
    "cssnano": "^4.1.10",
    "imagemin-cli": "^5.0.0",
    "imagemin-optipng": "^7.0.0",
    "node-sass": "^4.12.0",
    "postcss-cli": "^6.1.2",
    "pug-cli": "^1.0.0-alpha6",
    "shelljs": "^0.8.3"
  }
}
